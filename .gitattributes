# Let Git normalize text automatically
* text=auto

# Default: enforce LF for source and configs
*.py   text eol=lf
*.sh   text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml  text eol=lf
*.json text eol=lf
*.md   text eol=lf
*.txt  text eol=lf
*.ini  text eol=lf

# POSIX launchers must be LF
installers/run            text eol=lf
installers/argos          text eol=lf
installers/build          text eol=lf
installers/pack           text eol=lf
/argos                    text eol=lf
/run                      text eol=lf
/build                    text eol=lf
/pack                     text eol=lf
/projects/argos/argos     text eol=lf
/projects/argos/run       text eol=lf
/projects/argos/build     text eol=lf

# Windows launchers use CRLF
*.ps1 text eol=crlf
*.cmd text eol=crlf
*.bat text eol=crlf

# Binary assets (never touch line endings)
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.bmp  binary
*.webp binary
*.avif binary
*.heic binary
*.heif binary
*.tif  binary
*.tiff binary
*.mp4  binary
*.mov  binary
*.avi  binary
*.mkv  binary

# Models via Git LFS
*.pt   filter=lfs diff=lfs merge=lfs -text
*.onnx filter=lfs diff=lfs merge=lfs -text
